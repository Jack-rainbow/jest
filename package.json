{
  "name": "nuxt-element-dashboard",
  "version": "2.2.0",
  "description": "Nuxt2 + element UI project",
  "author": "levy <levy9527@qq.com>",
  "license": "MIT",
  "keywords": [
    "vue",
    "element-ui",
    "nuxt",
    "dashboard"
  ],
  "engines": {
    "npm": ">= 5.2.0"
  },
  "scripts": {
    "mock": "cross-env MODE=mock nuxt",
    "dev": "cross-env MODE=dev PORT=3333 nuxt",
    "mock:nologin": "cross-env MODE=mock PORT=3333 NO_LOGIN=1 nuxt",
    "dev:nologin": "cross-env MODE=dev NO_LOGIN=1 nuxt",
    "build": "cross-env MODE=prod nuxt build",
    "build:docker": "nuxt build",
    "build:page": "node ./build/new.js",
    "start": "cross-env HOST=0.0.0.0 PORT=4444 MODE=prod nuxt start",
    "start:docker": "nuxt start",
    "generate": "cross-env MODE=prod nuxt generate",
    "deploy": "now --npm --public",
    "test": "jest"
  },
  "dependencies": {
    "@femessage/el-form-renderer": "^1.3.0",
    "@femessage/theme-deepexi": "^2.4.11",
    "@femessage/upload-to-ali": "^1.4.0",
    "@nuxtjs/dotenv": "^1.3.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "axios": "^0.18.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.8.0",
    "babel-preset-env": "^1.7.0",
    "dayjs": "^1.8.12",
    "dotenv": "^6.0.0",
    "downloadjs": "^1.4.7",
    "el-data-table": "^1.2.3",
    "element-ui": "2.4.11",
    "jest": "^24.8.0",
    "jest-serializer-vue": "^2.0.2",
    "js-cookie": "^2.2.0",
    "less": "^3.9.0",
    "less-loader": "^11.1.0",
    "nuxt": "^3.0.0",
    "vue-jest": "^3.0.4"
  },
  "devDependencies": {
    "@nuxtjs/proxy": "^1.3.3",
    "babel-eslint": "^8.2.1",
    "babel-plugin-component": "^1.1.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-vue": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.0",
    "stylelint": "^9.10.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.vue": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "collectCoverageFrom": [
      "**/src/views/**/*.{js,vue}",
      "**/src/utils/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/test/unit/components/*.spec.(js|jsx|ts|tsx)"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(vue)/)"
    ],
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report",
          "outputPath": "test/unit/testcase/testCase.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true
        }
      ]
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "displayName": {
      "name": "sPaaS Test",
      "color": "blue"
    },
    "notify": true,
    "notifyMode": "always"
  }
}
